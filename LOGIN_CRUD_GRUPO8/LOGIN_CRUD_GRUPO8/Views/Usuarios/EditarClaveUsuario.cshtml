@model Usuario
@{
    ViewData["Title"] = "EditarClaveUsuario";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewData["Title"] - CRUD Grupo8</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/LOGIN_CRUD_GRUPO8.styles.css" asp-append-version="true" />
</head>

<body>

    <div class="card">
      <div class="card-header">
        Editar Contraseña
      </div>

      <div class="card-body">
          <form asp-action="EditarClaveUsuario" asp-controller="Usuarios" method="post">

            <input asp-for="idUsuario" type="hidden" class="form-control">

            <div class="mb-3">
                <label class="form-label">Nueva contraseña</label>
                <input asp-for="clave" type="password" class="form-control" name="clave">
                <span asp-validation-for="clave" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Confirme contraseña</label>
                <input type="password" class="form-control" name="confirmarClave">
                <span asp-validation-for="clave" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Confirmar</button>

        </form>

      </div>
    </div>

</body>
</html>
