@model Usuario
@{
    ViewData["Title"] = "EditarUsuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
  <div class="card-header">
    Editar Usuario
  </div>
  <div class="card-body">


      <form asp-action="EditarUsuario" asp-controller="Usuarios" method="post">

            <input asp-for="idUsuario" type="hidden" class="form-control">

        <div class="mb-3">
            <label class="form-label">Nombre de usuario</label>
            <input asp-for="usuario" type="text" class="form-control">
            <span asp-validation-for="usuario" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Correo electrónico</label>
            <input asp-for="correo" type="text" class="form-control">
            <span asp-validation-for="correo" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Contraseña</label>
            <input asp-for="clave" type="text" class="form-control">
            <span asp-validation-for="clave" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar</button>
        <a asp-action="ListarUsuarios" asp-controller="Usuarios" class="btn btn-warning">Volver a la lista</a>

    </form>

  </div>
</div>

