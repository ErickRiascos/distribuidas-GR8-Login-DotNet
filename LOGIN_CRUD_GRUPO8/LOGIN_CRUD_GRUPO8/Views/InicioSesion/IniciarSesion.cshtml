@model InicioSesion
@{
    ViewData["Title"] = "IniciarSesion";
    Layout = null;
}

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Inicio de Sesión</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link href="~/css/estilos.css" rel="stylesheet" />
    </head>

    <body>
        <div class="container">
            <div class="logo">
                <img class="logo-imagen" src="~/img/monster.jpg" alt="Logo de Monster" width="80" />
            </div>

            <h2>Inicio de Sesión</h2>

            <form asp-action="IniciarSesion" asp-controller="InicioSesion" method="post">
                <table>
                    <tr>
                        <td>
                            <label class="form-label">Usuario</label>
                            <input asp-for="usuario" type="text" class="form-control">
                            <span asp-validation-for="usuario" class="text-danger"></span>
                        </td>
                    </tr>

                    <tr>
                        <td>
                            <label class="form-label">Contraseña</label>
                            <input asp-for="password" type="password" class="form-control">
                            <span asp-validation-for="password" class="text-danger"></span>
                        </td>
                    </tr>
                </table> 

                <br/><br/>

                <div class="botones">
                    <button type="submit" class="btn btn-primary">Iniciar sesión</button>
                    <a asp-action="RegistrarUsuario" asp-controller="InicioSesion" class="btn btn-warning">Registrarse</a>
                </div>

            </form>

        </div>
    </body>
</html>