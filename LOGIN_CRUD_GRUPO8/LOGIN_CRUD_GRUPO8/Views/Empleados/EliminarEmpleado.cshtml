@model Empleado
@{
    ViewData["Title"] = "EliminarEmpleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Eliminar Empleado
    </div>
    <div class="card-body">


        <form asp-action="EliminarEmpleado" asp-controller="Empleados" method="post">

            <input asp-for="id" type="hidden" class="form-control">

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el empleado: @Html.DisplayTextFor(m => m.nombre) ?
            </div>

            <button type="submit" class="btn btn-danger">Eliminar</button>
            <a asp-action="ListarEmpleados" asp-controller="Empleados" class="btn btn-warning">Volver a la lista</a>
        </form>
    </div>
</div>

