@model Empleado
@{
    ViewData["Title"] = "EditarEmpleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        Editar Empleado
    </div>
    <div class="card-body">


        <form asp-action="EditarEmpleado" asp-controller="Empleados" method="post">

            <input asp-for="id" type="hidden" class="form-control">

            <div class="mb-3">
                <label class="form-label">Cédula</label>
                <input asp-for="cedula" type="text" class="form-control">
                <span asp-validation-for="cedula" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Nombre</label>
                <input asp-for="nombre" type="text" class="form-control">
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Apellido Paterno</label>
                <input asp-for="apellidoPaterno" type="text" class="form-control">
                <span asp-validation-for="apellidoPaterno" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label">Apellido Materno</label>
                <input asp-for="apellidoMaterno" type="text" class="form-control">
                <span asp-validation-for="apellidoMaterno" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>
            <a asp-action="ListarEmpleados" asp-controller="Empleados" class="btn btn-warning">Volver a la lista</a>

        </form>

    </div>
</div>

